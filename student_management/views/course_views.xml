<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view -->
    <record id="view_student_management_course_list" model="ir.ui.view">
        <field name="name">student.management.course.list</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="credit"/>
                <field name="student_count" string="Enrolled Students"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_student_management_course_form" model="ir.ui.view">
        <field name="name">student.management.course.form</field>
        <field name="model">student.management.course</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_students" 
                            type="object" 
                            string="View Enrolled Students"
                            class="btn-primary"
                            invisible="student_count == 0"
                            icon="fa-users"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" 
                                type="object" 
                                name="action_view_students"
                                icon="fa-users">
                            <field string="Students" name="student_count" widget="statinfo"/> 
                            <!-- oe_stat_button + statinfo = Smart button with number and label. -->
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            invisible="active == True"/>
                    <group>
                        <group name="basic_info" string="Course Information">
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="credit" required="1"/>
                            <field name="active"/>
                        </group>
                        <group name="stats" string="Statistics">
                            <field name="student_count" readonly="1"/>
                        </group>
                    </group>
                    <group name="description" string="Description">
                        <field name="description" nolabel="1" placeholder="Course description..."/>
                    </group>
                    <notebook>
                        <page name="students" string="Enrolled Students">
                            <field name="student_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="roll_no"/>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="department"/>
                                    <field name="total_credits"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action view -->
    <record id="action_student_management_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">student.management.course</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first course!
            </p>
            <p>
                Add courses to the system and enroll students.
            </p>
        </field>
    </record>
</odoo>
